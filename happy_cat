#include <LiquidCrystal.h>
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);
byte name0x4[] = { B00000, B00000, B10011, B10001, B11001, B01010, B01001, B01001 };

byte name1x9[] = { B01001, B01001, B10101, B00011, B00010, B00010, B00100, B00100 };
byte name0x0[] = { B00000, B00011, B00101, B00110, B00100, B01100, B01001, B01001 };
byte name0x1[] = { B00000, B00000, B10000, B01111, B00000, B10000, B01000, B01000 };
byte name0x2[] = { B00000, B00011, B00100, B11001, B00000, B01000, B10100, B10100 };
byte name0x3[] = { B00000, B00000, B10100, B10010, B11010, B01010, B01010, B01001 };
byte name0x6[] = { B00000, B00000, B00111, B00101, B00110, B00100, B01101, B01001 };
byte name0x7[] = { B00000, B00000, B00000, B10000, B01111, B10000, B01000, B01000 };
byte name0x8[] = { B00000, B00000, B00011, B00100, B11001, B01000, B10100, B10100 };
byte name0x9[] = { B00000, B00000, B00000, B10001, B10010, B11010, B01010, B01010 };
byte name1x0[] = { B01000, B00100, B00010, B00001, B00000, B00000, B00000, B00000 };
byte name1x1[] = { B00000, B00101, B00010, B00000, B11111, B01000, B10000, B10000 };
byte name1x2[] = { B00000, B00000, B00001, B00010, B11100, B00000, B00000, B00000 };
byte name1x3[] = { B01001, B10001, B01101, B00110, B00010, B00010, B00100, B00100 };
byte name1x6[] = { B01000, B01000, B00100, B00010, B00001, B00000, B00000, B00000 };
byte name1x7[] = { B00101, B00010, B00000, B00000, B00000, B11111, B01000, B10000 };
byte name1x8[] = { B00000, B00000, B00000, B00001, B00010, B11100, B00000, B00000 };


// Button pins
void setup() {
  lcd.begin(16, 2); // initialize LCD

  // Create all custom characters
  lcd.createChar(0, name0x0);
  lcd.createChar(1, name0x1);
  lcd.createChar(2, name0x2);
  lcd.createChar(3, name0x3);
  lcd.createChar(4, name1x0);
  lcd.createChar(5, name1x1);
  lcd.createChar(6, name1x2);
  lcd.createChar(7, name1x3);

  // Draw initial frame
  lcd.setCursor(0,0); lcd.write(byte(0));
  lcd.setCursor(1,0); lcd.write(byte(1));
  lcd.setCursor(2,0); lcd.write(byte(2));
  lcd.setCursor(3,0); lcd.write(byte(3));

  lcd.setCursor(0,1); lcd.write(byte(4));
  lcd.setCursor(1,1); lcd.write(byte(5));
  lcd.setCursor(2,1); lcd.write(byte(6));
  lcd.setCursor(3,1); lcd.write(byte(7));
}

void loop() {
 
  // Top row frame 1
  lcd.createChar(0, name0x0);
  lcd.createChar(1, name0x1);
  lcd.createChar(2, name0x2);
  lcd.createChar(3, name0x3);

  // Bottom row frame 1
  lcd.createChar(4, name1x0);
  lcd.createChar(5, name1x1);
  lcd.createChar(6, name1x2);
  lcd.createChar(7, name1x3);

  delay(500);

  // Top row frame 2
  lcd.createChar(0, name0x6);
  lcd.createChar(1, name0x7);
  lcd.createChar(2, name0x8);
  lcd.createChar(3, name0x9);

  // Bottom row frame 2
  lcd.createChar(4, name1x6);
  lcd.createChar(5, name1x7);
  lcd.createChar(6, name1x8);
  lcd.createChar(7, name1x9);

  delay(500);

}
